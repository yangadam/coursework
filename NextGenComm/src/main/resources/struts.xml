<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <!-- 开发者模式 -->
    <constant name="struts.devMode" value="true"/>
    <!-- 设定支持动态方法调用，默认为false -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <!-- 设置最大上传文件为 10 MB -->
    <constant name="struts.multipart.maxSize" value="10485760"/>
    <!-- 默认主题 -->
    <constant name="struts.ui.theme" value="simple"/>
    <!-- 将Action交给Spring管理 -->
    <constant name="struts.objectFactory" value="spring"/>
    <!-- Struts处理的扩展名 -->
    <constant name="struts.action.extension" value="do"/>

    <package name="default" extends="json-default">

        <global-results>
            <result name="login" type="redirect">login.do</result>
            <result name="admin" type="redirect">admin.do</result>
        </global-results>

        <action name="rememberMeLogin" class="remLoginAction">
            <result>login.do</result>
        </action>

        <action name="login">
            <result>/WEB-INF/jsp/login.jsp</result>
        </action>

        <action name="doLogin" class="loginAction">
            <result name="input">login.do</result>
        </action>

        <action name="logout" class="logoutAction">
            <result>login.do</result>
        </action>

        <action name="admin">
            <result>/WEB-INF/jsp/admin/home.jsp</result>
        </action>

    </package>

    <package name="admin" namespace="/admin" extends="json-default">

        <action name="commList">
            <result>/WEB-INF/jsp/commList.jsp</result>
        </action>

        <action name="commAdd">
            <result>/WEB-INF/jsp/commAdd.jsp</result>
        </action>

        <action name="doCommAdd" class="commListAction" method="add">
            <result name="input" type="redirect">commAdd.do</result>
            <result type="redirect">commList.do</result>
        </action>

        <action name="commEdit" class="commListAction" method="edit">
            <result>/WEB-INF/jsp/commEdit.jsp</result>
        </action>

        <!--Building Action-->
        <action name="buildingList" class="buildingListAction" method="execute">
            <result>/WEB-INF/jsp/buildingList.jsp</result>
        </action>

        <action name="buildingAdd">
            <result>/WEB-INF/jsp/buildingAdd.jsp</result>
        </action>

        <action name="doBuildingAdd" class="buildingListAction" method="add">
            <result name="input" type="redirect">buildingAdd.do</result>
            <result type="redirect">buildingList.do</result>
        </action>

        <action name="buildingEdit" class="buildingListAction" method="edit">
            <result>/WEB-INF/jsp/buildingEdit.jsp</result>
        </action>

    </package>


    <package name="guard" namespace="/guard" extends="json-default">

        <global-results>
            <result name="login">/WEB-INF/jsp/login.jsp</result>
        </global-results>

        <action name="tempParkingList">
            <result>/WEB-INF/jsp/tempParkingList.jsp</result>
        </action>
    </package>

    <package name="json" namespace="/json" extends="json-default">

        <action name="commListData" class="commListAction">
            <result name="input">/WEB-INF/jsp/commList.jsp</result>
            <result type="json">
                <param name="excludeNullProperties">true</param>
                <param name="excludeProperties">count,comm</param>
            </result>
        </action>

        <action name="buildingListData" class="buildingListAction">
            <result name="input">/WEB-INF/jsp/buildingList.jsp</result>
            <result type="json">
                <param name="excludeProperties">buildingName, buildingNo</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>

        <action name="tempParkingListData" class="tempParkingListAction">
            <result type="json">

            </result>
        </action>

    </package>

</struts>