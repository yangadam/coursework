<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <!-- 默认编码 -->
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <!-- 不缓存静态内容 -->
    <constant name="struts.serve.static.browserCache" value="false"/>
    <!-- 自动加载struts.xml -->
    <constant name="struts.configuration.xml.reload" value="true"/>
    <!-- 开发者模式 -->
    <constant name="struts.devMode" value="true"/>
    <!-- 默认主题 -->
    <constant name="struts.ui.theme" value="simple"/>
    <!-- 将Action交给Spring管理 -->
    <constant name="struts.objectFactory" value="spring"/>
    <!-- Struts处理的扩展名 -->
    <constant name="struts.action.extension" value="do"/>

    <package name="comm" extends="struts-default">

        <default-action-ref name="indexPage"/>

        <global-results>
            <result name="exceptionPage">error/exceptionPage.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="exceptionPage"/>
        </global-exception-mappings>

        <action name="indexPage">
            <result>/index.jsp</result>
        </action>

        <action name="calculate" class="calculateAction">
            <result>/search.jsp</result>
        </action>

        <action name="search" class="calculateAction" method="search">
            <result>/show.jsp</result>
        </action>

    </package>

</struts>