<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <!-- 开发者模式 -->
    <constant name="struts.devMode" value="true"/>
    <!-- 设定支持动态方法调用，默认为false -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <!-- 设置最大上传文件为 10 MB -->
    <constant name="struts.multipart.maxSize" value="10485760"/>
    <!-- 默认主题 -->
    <constant name="struts.ui.theme" value="simple"/>
    <!-- 将Action交给Spring管理 -->
    <constant name="struts.objectFactory" value="spring"/>
    <!-- Struts处理的扩展名 -->
    <constant name="struts.action.extension" value="do"/>

    <package name="default" extends="struts-default">

        <global-results>
            <result name="login">/WEB-INF/jsp/login.jsp</result>
            <result name="error">/WEB-INF/jsp/error/error.jsp</result>
        </global-results>

        <action name="login">
            <result>/WEB-INF/jsp/login.jsp</result>
        </action>

        <action name="dologin" class="loginAction">
            <result name="input" type="redirectAction">login</result>
            <result name="admin" type="redirectAction">/admin/home</result>
        </action>

        <action name="test" class="testAction">
            <result>/WEB-INF/jsp/test/test.jsp</result>
        </action>

    </package>

    <package name="admin" namespace="/admin" extends="json-default">

        <global-results>
            <result name="login">/WEB-INF/jsp/login.jsp</result>
            <result name="error">/WEB-INF/jsp/error/error.jsp</result>
        </global-results>

        <action name="home">
            <result>/WEB-INF/jsp/admin/home.jsp</result>
        </action>

        <action name="test">
            <result>/WEB-INF/jsp/dataTables.jsp</result>
        </action>

    </package>

    <package name="json" extends="json-default">
        <action name="jsonAction" class="jsonAction">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <action name="commlist" class="communityList">
            <result>/WEB-INF/jsp/admin/commList.jsp</result>
        </action>

        <action name="commform" class="communityForm">
            <result>/WEB-INF/jsp/admin/commForm.jsp</result>
            <result name="input">/WEB-INF/jsp/admin/commList.jsp</result>
        </action>

        <!--<action name="addComm" class="communityAction" method="add">-->
        <!--<result type="chain">listComm</result>-->
        <!--</action>-->

        <action name="listBuild" class="buildingAction" method="list">
            <result>/WEB-INF/jsp/admin/build.jsp</result>
            <result name="input">/WEB-INF/jsp/admin/build.jsp</result>
        </action>

        <action name="addBuild" class="buildingAction" method="add">
            <!--<interceptor-ref name="token"/>
            <result name="invalid.token">/WEB-INF/jsp/admin/build.jsp</result>-->
            <result name="input">/WEB-INF/jsp/admin/build.jsp</result>
            <result type="chain">listBuild</result>
        </action>

    </package>

</struts>