<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>


    <!-- 默认编码 -->
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <!-- 设定支持动态方法调用，默认为false -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <!-- 不缓存静态内容 -->
    <constant name="struts.serve.static.browserCache" value="false"/>
    <!-- 自动加载struts.xml -->
    <constant name="struts.configuration.xml.reload" value="true"/>
    <!-- 开发者模式 -->
    <constant name="struts.devMode" value="true"/>
    <!-- 设置最大上传文件为 10 MB -->
    <constant name="struts.multipart.maxSize" value="10485760"/>
    <!-- 默认主题 -->
    <constant name="struts.ui.theme" value="simple"/>
    <!-- 将Action交给Spring管理 -->
    <constant name="struts.objectFactory" value="spring"/>
    <!-- Struts处理的扩展名 -->
    <constant name="struts.action.extension" value="do,"/>

    <package name="default" extends="struts-default">

        <global-results>
            <result name="login">/WEB-INF/jsp/login.jsp</result>
            <result name="error">/WEB-INF/jsp/error/error.jsp</result>
        </global-results>

        <action name="loginPage">
            <result>/WEB-INF/jsp/login.jsp</result>
        </action>

        <action name="login" class="loginAction" method="execute">
            <result name="input">loginPage.do</result>
            <result name="admin">/WEB-INF/jsp/admin/home.jsp</result>
        </action>

    </package>

    <package name="admin" namespace="/admin" extends="struts-default">

        <global-results>
            <result name="login">/WEB-INF/jsp/login.jsp</result>
            <result name="error">/WEB-INF/jsp/error/error.jsp</result>
        </global-results>

        <action name="home">
            <result>/WEB-INF/jsp/admin/home.jsp</result>
        </action>

        <action name="listComm" class="communityAction" method="list">
            <result>/WEB-INF/jsp/admin/comm.jsp</result>
        </action>

        <action name="addComm" class="communityAction" method="add">
            <result type="chain">listComm</result>
        </action>

    </package>

</struts>