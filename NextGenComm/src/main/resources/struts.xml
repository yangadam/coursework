<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <!-- 开发者模式 -->
    <constant name="struts.devMode" value="true"/>
    <!-- 设定支持动态方法调用，默认为false -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <!-- 设置最大上传文件为 10 MB -->
    <constant name="struts.multipart.maxSize" value="10485760"/>
    <!-- 默认主题 -->
    <constant name="struts.ui.theme" value="simple"/>
    <!-- 将Action交给Spring管理 -->
    <constant name="struts.objectFactory" value="spring"/>
    <!-- Struts处理的扩展名 -->
    <constant name="struts.action.extension" value="do"/>

    <package name="default" extends="struts-default">
        <global-results>
            <result name="login" type="redirect">/login.do</result>
            <result name="admin" type="redirect">/admin.do</result>
            <result name="director" type="redirect">/director.do</result>
            <result name="unauthorized" type="redirect">/WEB-INF/jsp/login.jsp</result>
        </global-results>
    </package>

    <package name="root" namespace="/" extends="default">

        <action name="rememberMeLogin" class="remLoginAction">
            <result>login.do</result>
        </action>

        <action name="login">
            <result>/WEB-INF/jsp/login.jsp</result>
        </action>

        <action name="doLogin" class="loginAction">
            <result name="input">login.do</result>
        </action>

        <action name="logout" class="logoutAction">
            <result>login.do</result>
        </action>

        <action name="admin" class="actionSupport">
            <result>/WEB-INF/jsp/admin/home.jsp</result>
        </action>

        <action name="director" class="actionSupport">
            <result>/WEB-INF/jsp/director/home.jsp</result>
        </action>

    </package>

    <package name="admin" namespace="/admin" extends="default">

        <action name="community" class="actionSupport">
            <result>/WEB-INF/jsp/admin/comm.jsp</result>
        </action>

        <action name="addComm" class="commListAction" method="add">
            <result type="redirect">community.do</result>
            <result name="input">community.do</result>
        </action>

        <action name="director" class="actionSupport">
            <result>/WEB-INF/jsp/admin/director.jsp</result>
        </action>

        <action name="addMng" class="directorListAction" method="add">
            <result type="redirect">director.do</result>
            <result name="input">director.do</result>
        </action>

    </package>

    <package name="director" namespace="/director" extends="default">

        <action name="building" class="actionSupport">
            <result>/WEB-INF/jsp/director/build.jsp</result>
        </action>

        <action name="addBuild" class="buildListAction" method="add">
            <result type="redirect">building.do</result>
            <result name="input">building.do</result>
        </action>

        <action name="room" class="actionSupport">
            <result>/WEB-INF/jsp/director/room.jsp</result>
        </action>

    </package>

    <!-- JSON package -->
    <package name="data" extends="json-default">

        <global-results>
            <result type="json">
                <param name="root">data</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </global-results>

        <action name="listComm" class="commListAction" method="list"/>
        <action name="listMng" class="directorListAction" method="list"/>
        <action name="commNames" class="directorListAction" method="commNameList"/>
        <action name="listBuild" class="buildListAction" method="list"/>

    </package>

</struts>