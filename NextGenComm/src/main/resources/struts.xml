<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <!-- 开发者模式 -->
    <constant name="struts.devMode" value="true"/>
    <!-- 设定支持动态方法调用，默认为false -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <!-- 设置最大上传文件为 10 MB -->
    <constant name="struts.multipart.maxSize" value="10485760"/>
    <!-- 默认主题 -->
    <constant name="struts.ui.theme" value="simple"/>
    <!-- 将Action交给Spring管理 -->
    <constant name="struts.objectFactory" value="spring"/>
    <!-- Struts处理的扩展名 -->
    <constant name="struts.action.extension" value="do"/>

    <package name="default" extends="struts-default">
        <global-results>
            <result name="login" type="redirect">login.do</result>
            <result name="unauthorized" type="redirect">login.do</result>
            <result name="admin" type="redirect">admin.do</result>
            <result name="director" type="redirect">director.do</result>
            <result name="clerk" type="redirect">clerk.do</result>
            <result name="guard" type="redirect">guard.do</result>
            <result name="owner" type="redirect">owner.do</result>
        </global-results>
    </package>

    <package name="root" namespace="/" extends="default">

        <action name="rememberMeLogin" class="remLoginAction"/>

        <action name="login">
            <result>/WEB-INF/jsp/login.jsp</result>
        </action>

        <action name="doLogin" class="loginAction">
            <result name="input">login.do</result>
        </action>

        <action name="logout" class="logoutAction">
            <result>login.do</result>
        </action>

        <action name="admin" class="directAction" method="admin">
            <result>/WEB-INF/jsp/admin/home.jsp</result>
        </action>

        <action name="director" class="directAction" method="director">
            <result>/WEB-INF/jsp/director/home.jsp</result>
        </action>

        <action name="clerk" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/home.jsp</result>
        </action>

        <action name="guard" class="directAction" method="guard">
            <result>/WEB-INF/jsp/guard/home.jsp</result>
        </action>

        <action name="owner" class="directAction" method="owner">
            <result>/WEB-INF/jsp/owner/home.jsp</result>
        </action>

        <action name="test" class="testAction">
            <result>/WEB-INF/jsp/test/test.jsp</result>
        </action>

        <!-- Configure File Action -->
        <action name="uploadPro" class="cn.edu.xmu.comm.action.UploadAction">
            <param name="filesPath">/uploadFiles</param>
            <result>/WEB-INF/jsp/test/Success.jsp</result>
        </action>

    </package>

    <package name="admin" namespace="/admin" extends="default">

        <global-results>
            <result name="login" type="redirect">/rememberMeLogin.do</result>
            <result name="unauthorized" type="redirect">/rememberMeLogin.do</result>
        </global-results>

        <action name="community" class="directAction" method="admin">
            <result>/WEB-INF/jsp/admin/comm.jsp</result>
        </action>

        <action name="addComm" class="commAddAction">
            <result type="redirect">community.do</result>
            <result name="input">community.do</result>
        </action>

        <action name="delComm" class="commDelAction">
            <result type="redirect">community.do</result>
            <result name="input">community.do</result>
        </action>

        <action name="director" class="directAction" method="admin">
            <result>/WEB-INF/jsp/admin/director.jsp</result>
        </action>

        <action name="addMng" class="directorAddAction">
            <result type="redirect">director.do</result>
            <result name="input">director.do</result>
        </action>

    </package>

    <package name="director" namespace="/director" extends="default">

        <global-results>
            <result name="login" type="redirect">/rememberMeLogin.do</result>
            <result name="unauthorized" type="redirect">/rememberMeLogin.do</result>
        </global-results>

        <action name="building" class="directAction" method="director">
            <result>/WEB-INF/jsp/director/build.jsp</result>
        </action>

        <action name="addBuild" class="buildAddAction">
            <result type="redirect">building.do</result>
            <result name="input">building.do</result>
        </action>

        <action name="room" class="directAction" method="director">
            <result>/WEB-INF/jsp/director/room.jsp</result>
        </action>

        <action name="addRoom" class="roomAddAction">
            <result type="redirect">room.do</result>
            <result name="input">room.do</result>
        </action>

        <action name="staff" class="directAction" method="director">
            <result>/WEB-INF/jsp/director/staff.jsp</result>
        </action>

        <action name="addStaff" class="staffAddAction">
            <result type="redirect">staff.do</result>
            <result name="input">staff.do</result>
        </action>

        <action name="parkingLot" class="directAction" method="director">
            <result>/WEB-INF/jsp/director/parkingLot.jsp</result>
        </action>

        <action name="addParkPlace" class="parkPlaceAddAction">
            <result type="redirect">parkingLot.do</result>
            <result name="input">parkingLot.do</result>
        </action>

    </package>

    <package name="clerk" namespace="/clerk" extends="default">

        <global-results>
            <result name="login" type="redirect">/rememberMeLogin.do</result>
            <result name="unauthorized" type="redirect">/rememberMeLogin.do</result>
        </global-results>

        <action name="building" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/build.jsp</result>
        </action>

        <action name="addBuild" class="buildAddAction">
            <result type="redirect">building.do</result>
            <result name="input">building.do</result>
        </action>

        <action name="room" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/room.jsp</result>
        </action>

        <action name="addRoom" class="roomAddAction">
            <result type="redirect">room.do</result>
            <result name="input">room.do</result>
        </action>

        <action name="checkin" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/checkin.jsp</result>
        </action>

        <action name="doCheckIn" class="checkInAction">
            <result name="input">checkin.do</result>
            <result type="redirect">checkin.do</result>
        </action>

        <action name="change" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/change.jsp</result>
        </action>

        <action name="input" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/inputDevice.jsp</result>
        </action>

        <action name="inputValue" class="inputValueAction">
            <result name="input">input.do</result>
            <result type="redirect">input.do</result>
        </action>

        <action name="updateValue" class="updateValueAction">
            <result name="input">input.do</result>
            <result type="redirect">input.do</result>
        </action>

        <action name="owner" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/owner.jsp</result>
        </action>

        <action name="addOwner" class="ownerAddAction">
            <result type="redirect">owner.do</result>
            <result name="input">owner.do</result>
        </action>

        <action name="calculate" class="calculateAction">
            <result name="input">input.do</result>
            <result type="redirect">input.do</result>
        </action>

        <action name="share" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/share.jsp</result>
        </action>

        <action name="parkplace" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/parkplace.jsp</result>
        </action>

        <action name="carRent" class="directAction" method="clerk">
            <result>/WEB-INF/jsp/clerk/rent.jsp</result>
        </action>

    </package>

    <package name="guard" namespace="/guard" extends="default">

        <global-results>
            <result name="login" type="redirect">/rememberMeLogin.do</result>
            <result name="unauthorized" type="redirect">/rememberMeLogin.do</result>
        </global-results>

        <action name="tempParkingList" class="directAction" method="guard">
            <result>/WEB-INF/jsp/guard/tempParkingList.jsp</result>
        </action>

        <action name="tempParkingRegiste" class="tempParkingRegisteAction">
            <result name="rent">/WEB-INF/jsp/test/test.jsp</result>
            <result name="temp">/WEB-INF/jsp/guard/tempParkingRegiste.jsp</result>
        </action>

        <action name="toTempParkingRegiste" class="toTempParkingRegisteAction">
            <result>/WEB-INF/jsp/guard/tempParkingRegiste.jsp</result>
        </action>

    </package>

    <package name="owner" namespace="/owner" extends="default">
        <global-results>
            <result name="login" type="redirect">/rememberMeLogin.do</result>
            <result name="unauthorized" type="redirect">/rememberMeLogin.do</result>
        </global-results>

        <action name="billlist" class="billListAction">
            <result>/WEB-INF/jsp/owner/billlist.jsp</result>
        </action>

        <action name="makePayment" class="makePaymentAction">
            <result type="redirect">billlist.do</result>
        </action>

    </package>

    <!-- JSON package -->
    <package name="data" extends="json-default">

        <default-interceptor-ref name="basicStack"/>

        <global-results>
            <result type="json">
                <param name="root">data</param>
                <param name="excludeNullProperties">true</param>
            </result>
            <result name="login" type="redirect">/rememberMeLogin.do</result>
            <result name="unauthorized" type="redirect">/rememberMeLogin.do</result>
        </global-results>

        <action name="listComm" class="commListAction"/>
        <action name="listBuild" class="buildListAction"/>
        <action name="listDir" class="directorListAction"/>
        <action name="listOwner" class="ownerListAction"/>
        <action name="commNames" class="commNameAction"/>
        <action name="buildNo" class="buildNoAction"/>
        <action name="floorNo" class="floorNoAction"/>
        <action name="listRoom" class="roomListAction"/>
        <action name="listStaff" class="staffListAction"/>
        <action name="deviceValue" class="deviceValueAction"/>
        <action name="vacantRoomNo" class="roomNoAction" method="vacant"/>
        <action name="nonVacantRoomNo" class="roomNoAction" method="noneVacant"/>
        <action name="ownerSearch" class="ownerSearchAction"/>
        <action name="deviceSearch" class="deviceSearchAction"/>
        <action name="roomInfo" class="roomInfoAction"/>
        <action name="unchargedParkBill" class="tempParkingUnchargedListAction"/>
        <action name="deviceList" class="deviceListAction"/>
        <action name="count" class="deviceCountAction"/>
        <action name="shareList" class="shareListAction"/>
        <action name="chargedParkBill" class="tempParkingChargedListAction"/>
        <action name="tempRegister" class="tempParkingRegisteAction"/>
        <action name="ownerByRoom" class="ownerByRoomAction"/>
        <action name="tempParkBillAdd" class="tempParkBillAddAction"/>
        <action name="listParkPlace" class="parkPlaceListAction"/>
        <action name="listPark" class="parkListAction"/>
        <action name="vacantPark" class="vacantParkAction"/>
    </package>

</struts>