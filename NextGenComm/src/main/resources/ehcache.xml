<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <!-- Default Disk Cache Directionary -->
    <diskStore path="java.io.tmpdir"/>

    <!-- Default Cache Strategy -->
    <defaultCache
            maxElementsInMemory="10000"
            eternal="false"
            overflowToDisk="false"
            timeToIdleSeconds="120"
            timeToLiveSeconds="120"/>

    <!-- Integrate Second-Level Cache Of Hibernate: Cache Model Object -->
    <cache name="cn.edu.xmu.comm.domain.EnergyRecord"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600"/>

    <!-- Integrate Query Cache Of Hibernate ref http://www.cnblogs.com/hoojo/archive/2012/07/12/2587941.html -->
    <cache name="org.hibernate.cache.spi.UpdateTimestampsCache"
           maxElementsInMemory="5000"
           eternal="true"
           overflowToDisk="true"/>

    <cache name="org.hibernate.cache.internal.StandardQueryCache"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="true"
           timeToLiveSeconds="120"/>

</ehcache>